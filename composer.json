{
    "name": "ssemerikov/reviewer-certificate-plugin",
    "description": "Reviewer Certificate Plugin for OJS - Generates personalized PDF certificates for peer reviewers",
    "type": "ojs-plugin",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Serhiy O. Semerikov",
            "email": "semerikov@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "APP\\plugins\\generic\\reviewerCertificate\\": "./"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "APP\\plugins\\generic\\reviewerCertificate\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite 'Unit Tests'",
        "test:integration": "phpunit --testsuite 'Integration Tests'",
        "test:compatibility": "phpunit --testsuite 'Compatibility Tests'",
        "test:security": "phpunit --testsuite 'Security Tests'",
        "test:coverage": "phpunit --coverage-html tests/coverage/html --coverage-text",
        "test:all": [
            "@test:unit",
            "@test:integration",
            "@test:compatibility",
            "@test:security"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
